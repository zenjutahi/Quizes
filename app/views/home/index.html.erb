<div class="container">
  <div class="row">
  <% @questions.each do |q| %>
  <div class="card col-sm" style="width: 18rem;">
    <img class="card-img-top" src="<%= q.gravator %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><em><%= q.email %></em> asked:</h5>
      <p class="card-text"><%= q.body %><br/>
        <small><%= time_ago_in_words q.created_at %> ago</small>
      </p>
      <div>
        <a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View answers</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
